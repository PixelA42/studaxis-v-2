# Local App Configuration
OLLAMA_MODEL=llama3:3b
OLLAMA_HOST=http://localhost:11434
CHROMA_DB_PATH=./data/chromadb
USER_STATS_PATH=./data/user_stats.json
EMBEDDING_MODEL=all-MiniLM-L6-v2

# AWS Configuration (for sync)
AWS_REGION=ap-south-1
AWS_APPSYNC_ENDPOINT=https://your-appsync-endpoint.appsync-api.ap-south-1.amazonaws.com/graphql
S3_BUCKET_STUDENT=studaxis-student-stats
S3_BUCKET_CONTENT=studaxis-content

# App Settings
MAX_CONTEXT_TOKENS=4096
INFERENCE_TIMEOUT=30
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=5

# Feature Flags
ENABLE_CLOUD_SYNC=true
ENABLE_HINGLISH=true
ENABLE_PANIC_MODE=true
DEFAULT_THEME=dark
